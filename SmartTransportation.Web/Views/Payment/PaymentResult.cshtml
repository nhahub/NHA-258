@model SmartTransportation.Web.Models.Payment.PaymentResultViewModel

@{
    ViewData["Title"] = "Payment Result";
}

<h2>Payment Result</h2>

<p>Booking ID: @Model.BookingId</p>

@if (Model.PaymentId != 0)
{
    <p>Payment ID: @Model.PaymentId</p>
}

<p>Status: @Model.Status</p>

@if (Model.Amount > 0)
{
    <p>Amount: @Model.Amount @Model.Currency</p>
}

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <p style="color:red;">Error: @Model.ErrorMessage</p>
}

<a href="@Url.Action("Index", "Home")">Back to Home</a>
