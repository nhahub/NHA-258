@{
    var userRole = User.Claims.FirstOrDefault(c => c.Type == System.Security.Claims.ClaimTypes.Role)?.Value;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Move Smart</title>
    <link rel="stylesheet" href="~/css/layout_css.css" />
    @await RenderSectionAsync("Styles", required: false)
    @await RenderSectionAsync("Style", required: false)
</head>
<body>

    <header class="site-header">
        <div class="header-container">
            <a asp-page="/Index" class="brand">
                <div class="logo"><span>MS</span></div>
                <span>Move Smart</span>
            </a>

            <nav class="nav-links">
                <a href="#features">Features</a>
                <a asp-page="/SearchTrip">Trips</a>
                @if (User.Identity?.IsAuthenticated == true)
                {
                    @if (userRole == "Admin")
                    {
                        <a asp-page="/AdminDashboard">Dashboard</a>
                    }
                    else if (userRole == "Passenger")
                    {
                        <a asp-page="/customer-profile">Dashboard</a>
                    }
                    else if (userRole == "Driver")
                    {
                        <a asp-page="/DriverDashboard">Dashboard</a>
                    }
                }
            </nav>

            <div class="nav-cta">
                @if (User.Identity?.IsAuthenticated == true)
                {
                    <!-- Logged In User -->
                    <span class="user-greeting">Hello, @User.Identity.Name</span>
                    <form method="post" asp-page="/Logout" style="display: inline;" id="logoutForm">
                        <button type="submit" class="btn btn-primary" id="logoutBtn">Logout</button>
                    </form>
                }
                else
                {
                    <!-- Not Logged In -->
                    <a asp-page="/Log_in" class="btn btn-secondary">Login</a>
                    <a asp-page="/sign_up" class="btn btn-primary">Get Started</a>
                }
            </div>
        </div>
    </header>

    <!-- Optional: Success/Info Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success" style="margin: 20px auto; max-width: 1280px; padding: 16px 32px; background: #d1fae5; border: 1px solid #10b981; border-radius: 8px; color: #065f46;">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["InfoMessage"] != null)
    {
        <div class="alert alert-info" style="margin: 20px auto; max-width: 1280px; padding: 16px 32px; background: #dbeafe; border: 1px solid #3b82f6; border-radius: 8px; color: #1e40af;">
            @TempData["InfoMessage"]
        </div>
    }

    <main>
        @RenderBody()
    </main>

    <footer>
        <div class="container">
            <div class="footer-grid">
                <div class="footer-brand">
                    <div class="brand" style="margin-bottom: 16px;">
                        <div class="logo"><span>MS</span></div>
                        <span>Move Smart</span>
                    </div>
                    <p>Your all-in-one driving companion for safety, control, and intelligent insights on every journey.</p>
                </div>

                <div class="footer-col">
                    <h4>Product</h4>
                    <a asp-page="/Index" asp-fragment="features">Features</a>
                    <a href="#">Pricing</a>
                    <a href="#">Download</a>
                    <a href="#">Updates</a>
                </div>

                <div class="footer-col">
                    <h4>Company</h4>
                    <a href="#">About</a>
                    <a href="#">Careers</a>
                    <a href="#">Press</a>
                    <a href="#">Contact</a>
                </div>

                <div class="footer-col">
                    <h4>Resources</h4>
                    <a href="#">Help Center</a>
                    <a href="#">Status</a>
                    <a href="#">Privacy Policy</a>
                    <a href="#">Terms of Service</a>
                </div>
            </div>

            <div class="copyright">
                © <span id="year"></span> Move Smart Inc. All rights reserved.
            </div>
        </div>
    </footer>

    <script>
        document.getElementById('year').textContent = new Date().getFullYear();

        // Smooth scroll for anchor links
        document.querySelectorAll('a[href*="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                const href = this.getAttribute('href');
                if (href.includes('#')) {
                    const hash = href.split('#')[1];
                    const target = document.getElementById(hash);
                    if (target) {
                        e.preventDefault();
                        target.scrollIntoView({ behavior: 'smooth', block: 'start' });
                    }
                }
            });
        });

        // Optional: Add loading state to logout button
        const logoutForm = document.getElementById('logoutForm');
        const logoutBtn = document.getElementById('logoutBtn');

        if (logoutForm && logoutBtn) {
            logoutForm.addEventListener('submit', function() {
                logoutBtn.disabled = true;
                logoutBtn.textContent = 'Logging out...';
            });
        }

        // Auto-hide alert messages after 5 seconds
        setTimeout(function() {
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(function(alert) {
                alert.style.transition = 'opacity 0.5s';
                alert.style.opacity = '0';
                setTimeout(function() {
                    alert.remove();
                }, 500);
            });
        }, 5000);
    </script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>