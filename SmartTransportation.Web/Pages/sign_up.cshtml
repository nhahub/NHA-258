@page
@model Sign_UpModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>
        <link rel="stylesheet" href="~/css/signup_css.css" />
</head>
<body>
    <div class="signup-container">
        <div class="signup-header">
            <div class="logo-circle">
                <span>MS</span>
            </div>
            <h1>Create Account</h1>
            <p>Join Move Smart and start driving smarter today</p>
        </div>

        <div class="signup-body">
            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="error-message">
                    @Model.ErrorMessage
                </div>
            }

            <form method="post">
                <div class="form-group">
                    <label asp-for="UserName">Username</label>
                    <input asp-for="UserName"
                           type="text"
                           placeholder="Choose a username"
                           required />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Email">Email Address</label>
                    <input asp-for="Email"
                           type="email"
                           placeholder="john.doe@example.com"
                           required />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password">Password</label>
                    <div class="password-input">
                        <input asp-for="Password"
                               type="password"
                               id="password"
                               placeholder="Create a strong password"
                               required />
                        <button type="button" class="password-toggle" onclick="togglePassword('password')">üëÅÔ∏è</button>
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ConfirmPassword">Confirm Password</label>
                    <div class="password-input">
                        <input asp-for="ConfirmPassword"
                               type="password"
                               id="confirmPassword"
                               placeholder="Re-enter your password"
                               required />
                        <button type="button" class="password-toggle" onclick="togglePassword('confirmPassword')">üëÅÔ∏è</button>
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="UserTypeId">Account Type</label>
                    <select asp-for="UserTypeId" required>
                        <option value="">Select account type</option>
                        <option value="1">Admin</option>
                        <option value="2">Driver</option>
                        <option value="3">Passenger</option>
                    </select>
                    <span asp-validation-for="UserTypeId" class="text-danger"></span>
                </div>

                <div class="terms-checkbox">
                    <input type="checkbox" asp-for="AcceptTerms" id="terms" required />
                    <label asp-for="AcceptTerms">
                        I agree to Move Smart's <a href="#">Terms of Service</a> and <a href="#">Privacy Policy</a>
                    </label>
                </div>
                <span asp-validation-for="AcceptTerms" class="text-danger"></span>

                <button type="submit" class="btn btn-primary">Create Account</button>
            </form>

            <div class="login-link">
                Already have an account? <a asp-page="/Log_in">Login</a>
            </div>

            <div class="back-home">
                <a asp-page="/Index">‚Üê Back to Home</a>
            </div>
        </div>
    </div>

    <script>
        function togglePassword(fieldId) {
          const passwordInput = document.getElementById(fieldId);
          const type = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
          passwordInput.setAttribute('type', type);
        }
    </script>
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>

    <script>
        $(document).ready(function() {

            // Username validation
            $("#UserName").on("blur", function() {
                let val = $(this).val();
                if (!val) return;

                $.get("@Url.Page("Sign_Up", "CheckUsername")", { userName: val })
                 .done(function(res) {
                    if(res === true) {
                        $("#UserName").next(".text-danger").text("");
                    } else {
                        $("#UserName").next(".text-danger").text(res);
                    }
                 });
            });

            // Email validation
            $("#Email").on("blur", function() {
                let val = $(this).val();
                if (!val) return;

                $.get("@Url.Page("Sign_Up", "CheckEmail")", { email: val })
                 .done(function(res) {
                    if(res === true) {
                        $("#Email").next(".text-danger").text("");
                    } else {
                        $("#Email").next(".text-danger").text(res);
                    }
                 });
            });

        });
    </script>

</body>
</html>
