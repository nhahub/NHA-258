@page
@model Sign_UpModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>
    <style>
        :root {
            --primary: #5b6fd8;
            --primary-dark: #4a5ab8;
            --primary-light: #c8cef5;
            --primary-bg: #e8eaf9;
            --white: #ffffff;
            --black: #000000;
            --gray-50: #f9fafb;
            --gray-100: #f3f4f6;
            --gray-200: #e5e7eb;
            --gray-300: #d1d5db;
            --gray-600: #4b5563;
            --gray-700: #374151;
            --gray-900: #111827;
            --danger: #ef4444;
            --success: #10b981;
            --radius: 12px;
            --shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            --shadow-lg: 0 10px 25px rgba(0, 0, 0, 0.15);
        }

        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Arial, sans-serif;
            background: linear-gradient(135deg, #e8f0fe 0%, #f0f4ff 50%, #fafbff 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 40px 20px;
        }

        .signup-container {
            width: 100%;
            max-width: 500px;
            background: white;
            border-radius: 24px;
            box-shadow: var(--shadow-lg);
            overflow: hidden;
        }

        .signup-header {
            background: var(--primary);
            padding: 40px 40px 60px;
            text-align: center;
            position: relative;
        }

            .signup-header::after {
                content: '';
                position: absolute;
                bottom: 0;
                left: 0;
                right: 0;
                height: 40px;
                background: white;
                border-radius: 40px 40px 0 0;
            }

        .logo-circle {
            width: 80px;
            height: 80px;
            background: white;
            border-radius: 20px;
            margin: 0 auto 16px;
            display: grid;
            place-items: center;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
            position: relative;
            z-index: 1;
        }

            .logo-circle span {
                font-size: 32px;
                font-weight: 900;
                background: linear-gradient(135deg, var(--primary), var(--primary-dark));
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
                background-clip: text;
            }

        .signup-header h1 {
            color: white;
            font-size: 28px;
            font-weight: 800;
            margin-bottom: 8px;
            position: relative;
            z-index: 1;
        }

        .signup-header p {
            color: rgba(255, 255, 255, 0.9);
            font-size: 15px;
            position: relative;
            z-index: 1;
        }

        .signup-body {
            padding: 20px 40px 40px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            display: block;
            margin-bottom: 8px;
            font-weight: 600;
            color: var(--gray-700);
            font-size: 14px;
        }

        input, select {
            width: 100%;
            padding: 14px 16px;
            border: 2px solid var(--gray-200);
            border-radius: var(--radius);
            font-size: 15px;
            transition: all 0.3s;
            font-family: inherit;
        }

            input:focus, select:focus {
                outline: none;
                border-color: var(--primary);
                box-shadow: 0 0 0 3px rgba(91, 111, 216, 0.1);
            }

            input::placeholder {
                color: var(--gray-300);
            }

        select {
            cursor: pointer;
            color: var(--gray-700);
        }

        .password-input {
            position: relative;
        }

        .password-toggle {
            position: absolute;
            right: 16px;
            top: 50%;
            transform: translateY(-50%);
            background: none;
            border: none;
            color: var(--gray-600);
            cursor: pointer;
            padding: 4px;
            font-size: 18px;
        }

        .terms-checkbox {
            display: flex;
            align-items: flex-start;
            gap: 10px;
            margin-bottom: 24px;
        }

            .terms-checkbox input[type="checkbox"] {
                width: auto;
                margin-top: 4px;
                cursor: pointer;
                flex-shrink: 0;
            }

            .terms-checkbox label {
                margin: 0;
                font-weight: 500;
                cursor: pointer;
                color: var(--gray-700);
                font-size: 13px;
                line-height: 1.5;
            }

                .terms-checkbox label a {
                    color: var(--primary);
                    text-decoration: none;
                    font-weight: 600;
                }

                    .terms-checkbox label a:hover {
                        text-decoration: underline;
                    }

        .btn {
            width: 100%;
            padding: 14px;
            border: none;
            border-radius: var(--radius);
            font-size: 16px;
            font-weight: 700;
            cursor: pointer;
            transition: all 0.3s;
            font-family: inherit;
        }

        .btn-primary {
            background: var(--primary);
            color: white;
            box-shadow: var(--shadow);
        }

            .btn-primary:hover {
                background: var(--primary-dark);
                transform: translateY(-2px);
                box-shadow: var(--shadow-lg);
            }

            .btn-primary:active {
                transform: translateY(0);
            }

        .login-link {
            text-align: center;
            margin-top: 24px;
            color: var(--gray-600);
            font-size: 14px;
        }

            .login-link a {
                color: var(--primary);
                text-decoration: none;
                font-weight: 700;
                transition: color 0.2s;
            }

                .login-link a:hover {
                    color: var(--primary-dark);
                }

        .back-home {
            text-align: center;
            margin-top: 20px;
        }

            .back-home a {
                color: var(--gray-600);
                text-decoration: none;
                font-size: 14px;
                display: inline-flex;
                align-items: center;
                gap: 6px;
                transition: color 0.2s;
            }

                .back-home a:hover {
                    color: var(--primary);
                }

        .error-message {
            background: #fee;
            border: 1px solid var(--danger);
            color: var(--danger);
            padding: 12px;
            border-radius: var(--radius);
            margin-bottom: 20px;
            font-size: 14px;
        }

        .text-danger {
            color: var(--danger);
            font-size: 12px;
            margin-top: 4px;
            display: block;
        }

        @@media (max-width: 540px) {
            .signup-body {
                padding: 20px 24px 32px;
            }

            .signup-header {
                padding: 32px 24px 50px;
            }
        }
    </style>
</head>
<body>
    <div class="signup-container">
        <div class="signup-header">
            <div class="logo-circle">
                <span>MS</span>
            </div>
            <h1>Create Account</h1>
            <p>Join Move Smart and start driving smarter today</p>
        </div>

        <div class="signup-body">
            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="error-message">
                    @Model.ErrorMessage
                </div>
            }

            <form method="post">
                <div class="form-group">
                    <label asp-for="UserName">Username</label>
                    <input asp-for="UserName"
                           type="text"
                           placeholder="Choose a username"
                           required />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Email">Email Address</label>
                    <input asp-for="Email"
                           type="email"
                           placeholder="john.doe@example.com"
                           required />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password">Password</label>
                    <div class="password-input">
                        <input asp-for="Password"
                               type="password"
                               id="password"
                               placeholder="Create a strong password"
                               required />
                        <button type="button" class="password-toggle" onclick="togglePassword('password')">üëÅÔ∏è</button>
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ConfirmPassword">Confirm Password</label>
                    <div class="password-input">
                        <input asp-for="ConfirmPassword"
                               type="password"
                               id="confirmPassword"
                               placeholder="Re-enter your password"
                               required />
                        <button type="button" class="password-toggle" onclick="togglePassword('confirmPassword')">üëÅÔ∏è</button>
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="UserTypeId">Account Type</label>
                    <select asp-for="UserTypeId" required>
                        <option value="">Select account type</option>
                        <option value="1">Driver</option>
                        <option value="2">Admin</option>
                        <option value="3">Passenger</option>
                    </select>
                    <span asp-validation-for="UserTypeId" class="text-danger"></span>
                </div>

                <div class="terms-checkbox">
                    <input type="checkbox" asp-for="AcceptTerms" id="terms" required />
                    <label asp-for="AcceptTerms">
                        I agree to Move Smart's <a href="#">Terms of Service</a> and <a href="#">Privacy Policy</a>
                    </label>
                </div>
                <span asp-validation-for="AcceptTerms" class="text-danger"></span>

                <button type="submit" class="btn btn-primary">Create Account</button>
            </form>

            <div class="login-link">
                Already have an account? <a asp-page="/Log_in">Login</a>
            </div>

            <div class="back-home">
                <a asp-page="/Index">‚Üê Back to Home</a>
            </div>
        </div>
    </div>

    <script>
        function togglePassword(fieldId) {
          const passwordInput = document.getElementById(fieldId);
          const type = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
          passwordInput.setAttribute('type', type);
        }
    </script>
</body>
</html>
