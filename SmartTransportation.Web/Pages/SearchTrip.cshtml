@page
@model SearchTripModel
@{
    ViewData["Title"] = "Search Trips - Move Smart";
    Layout = "_Layout";
}

@section Styles {
    <link rel="stylesheet" href="~/css/login_css.css" />
}


<div class="search-container">

    <!-- Header -->
    <div class="search-header">
        <h1>Find Your Trip</h1>
        <p>Search by route, date, and passengers — then book instantly.</p>
    </div>

    <!-- Search Form -->
    <div class="search-form">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

            <div class="form-grid">

                <div class="form-group">
                    <label asp-for="FromLocation">From</label>
                    <input asp-for="FromLocation" placeholder="City / Stop" />
                    <span asp-validation-for="FromLocation" class="text-danger small"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ToLocation">To</label>
                    <input asp-for="ToLocation" placeholder="City / Stop" />
                    <span asp-validation-for="ToLocation" class="text-danger small"></span>
                </div>

                <div class="form-group">
                    <label asp-for="DepartureDate">Date</label>
                    <input asp-for="DepartureDate" type="date" />
                    <span asp-validation-for="DepartureDate" class="text-danger small"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Passengers">Passengers</label>
                    <input asp-for="Passengers" type="number" min="1" />
                    <span asp-validation-for="Passengers" class="text-danger small"></span>
                </div>
            </div>

            <button class="btn-search" type="submit">Search</button>

        </form>
    </div>

    <!-- Error Alert -->
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger mt-3">
            @Model.ErrorMessage
        </div>
    }

    <div class="results-section">

        @if (Model.HasSearched)
        {
            <!-- When results exist -->
            @if (Model.SearchResults.Any())
            {
                <div class="results-header">
                    <h2>Available Trips</h2>
                    <span class="badge">@Model.SearchResults.Count result(s)</span>
                </div>

                <div class="filter-badges">
                    @if (!string.IsNullOrEmpty(Model.FromLocation))
                    {
                        <span class="badge">From: @Model.FromLocation</span>
                    }
                    @if (!string.IsNullOrEmpty(Model.ToLocation))
                    {
                        <span class="badge">To: @Model.ToLocation</span>
                    }
                    @if (Model.DepartureDate.HasValue)
                    {
                        <span class="badge">Date: @Model.DepartureDate.Value.ToString("dd MMM")</span>
                    }
                    <span class="badge">@Model.Passengers passenger(s)</span>
                </div>

                @foreach (var trip in Model.SearchResults)
                {
                    <div class="trip-result-card">

                        <!-- Header / Route -->
                        <div class="trip-result-header">
                            <div class="route-info">
                                <div class="route-path">
                                    @trip.FromLocation → @trip.ToLocation
                                </div>

                                <div class="route-details">
                                    <div class="detail-item">
                                        <i class="bi bi-calendar"></i>
                                        @trip.DepartureDate.ToString("ddd, dd MMM yyyy")
                                    </div>

                                    <div class="detail-item">
                                        <i class="bi bi-clock"></i>
                                        @trip.DepartureTime
                                    </div>

                                    <div class="detail-item">
                                        <i class="bi bi-people"></i>
                                        @trip.AvailableSeats seats left (max @trip.MaxPassengers)
                                    </div>

                                    <div class="detail-item">
                                        <i class="bi bi-car-front"></i>
                                        @trip.VehicleType
                                    </div>
                                </div>
                            </div>

                            <!-- Price Box -->
                            <div class="price-box">
                                <div class="price">@trip.Price.ToString("0.00") EGP</div>
                                <div class="price-label">per seat</div>

                                @if (Model.Passengers > 0)
                                {
                                    var total = trip.Price * Model.Passengers;
                                    <div class="price-label mt-1">
                                        Total for @Model.Passengers:
                                        <strong>@total.ToString("0.00") EGP</strong>
                                    </div>
                                }
                            </div>
                        </div>

                        <!-- Driver Info -->
                        @{
                            var hasName = !string.IsNullOrWhiteSpace(trip.DriverName);
                            var driverInitial = hasName
                                ? trip.DriverName!.Trim()[0].ToString().ToUpper()
                                : "?";
                        }

                        <div class="driver-info">
                            <div class="driver-avatar">
                                @driverInitial
                            </div>
                            <div class="driver-details">
                                <h4>@(string.IsNullOrWhiteSpace(trip.DriverName) ? "Unknown Driver" : trip.DriverName)</h4>

                                @if (trip.DriverRating > 0)
                                {
                                    <div class="driver-rating">
                                        ⭐ @trip.DriverRating.ToString("0.0") (@trip.TotalReviews reviews)
                                    </div>
                                }
                                else
                                {
                                    <div class="driver-rating text-muted small">
                                        No reviews yet
                                    </div>
                                }
                            </div>
                        </div>

                        <!-- Actions -->
                        <div class="trip-actions">

                            <a asp-page="/Bookings/Create"
                               asp-route-TripId="@trip.TripId"
                               asp-route-Passengers="@Model.Passengers"
                               class="btn-book">
                                Book Now
                            </a>


                        </div>

                    </div>
                }
            }
            else
            {
                <!-- No Results -->
                <div class="no-results">
                    <h3>No trips found</h3>
                    <p>Try changing your filters or date.</p>
                </div>
            }
        }

    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

