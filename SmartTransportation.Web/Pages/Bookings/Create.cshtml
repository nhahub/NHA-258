@page
@model CreateModel

@{
    ViewData["Title"] = "Book Trip";
}

<link rel="stylesheet" href="~/css/create-booking.css" />

<div class="search-container">

    <!-- Header: same look as Search Trips page -->
    <div class="search-header">
        <h1>Confirm Your Booking</h1>

        @if (Model.Trip?.Route != null)
        {
            <p class="route-path">
                @Model.Trip.Route.StartLocation → @Model.Trip.Route.EndLocation
            </p>

            <p>
                <strong>Departure:</strong>
                @Model.Trip.StartTime.ToString("ddd, dd MMM yyyy • HH:mm")
            </p>

            <p>
                <strong>Available seats:</strong> @Model.Trip.AvailableSeats
            </p>
        }
    </div>

    <!-- Booking form card -->
    <div class="search-form">
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="no-results" style="padding:16px; margin-bottom:16px;">
                @Model.ErrorMessage
            </div>
        }

        <form method="post">
            @Html.AntiForgeryToken()

            <input type="hidden" asp-for="TripId" />
            <input type="hidden" asp-for="Passengers" />

            <div class="form-grid">
                <!-- Multi-select segments -->
                <div class="form-group">
                    <label asp-for="SelectedSegmentIds">
                        Select segments for your ride
                    </label>
                    <select asp-for="SelectedSegmentIds" multiple>
                        @foreach (var seg in Model.SegmentOptions)
                        {
                            <option value="@seg.SegmentId">@seg.Label</option>
                        }
                    </select>
                    <small style="font-size: 12px; color: var(--gray-600); margin-top:4px;">
                        Hold Ctrl (Windows) or Cmd (Mac) to select multiple segments.
                    </small>
                    <span asp-validation-for="SelectedSegmentIds" class="text-danger"></span>
                </div>

                <!-- Seats -->
                <div class="form-group">
                    <label asp-for="SeatsCount">Passengers</label>
                    <input asp-for="SeatsCount" type="number" min="1" max="20" />
                    <span asp-validation-for="SeatsCount" class="text-danger"></span>
                </div>
            </div>

            <button type="submit" class="btn-search">
                Confirm &amp; Continue to Payment
            </button>
        </form>
    </div>

    <!-- Route overview (same card style as search results) -->
    @if (Model.Segments.Any())
    {
        <div class="results-section">
            <div class="results-header">
                <h3>Route segments</h3>
            </div>

            @foreach (var seg in Model.Segments.OrderBy(s => s.SegmentOrder))
            {
                <div class="trip-result-card">
                    <div class="trip-result-header">
                        <div class="route-info">
                            <div class="route-path">
                                @seg.StartPoint → @seg.EndPoint
                            </div>
                            <div class="route-details">
                                <div class="detail-item">
                                    <span>Segment #@seg.SegmentOrder</span>
                                </div>
                            </div>
                        </div>
                        <div class="price-box">
                            <div class="price">
                                @((seg.DistanceKm ?? 0).ToString("0.0")) km
                            </div>
                            <div class="price-label">
                                distance
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
