@page
@model DriverDashboardModel
@{
    ViewData["Title"] = "Driver Dashboard - Move Smart";
}

@section Styles {
    <link rel="stylesheet" href="~/css/driver_dashboard_css.css" />
}

<div class="dashboard-container">

    <!-- Header -->
    <div class="dashboard-header">
        <h2 style="margin-bottom: 4px;">Welcome, @Model.DriverName</h2>
        <p style="margin: 0; color: var(--gray-600);">
            Here is an overview of your trips, bookings, and earnings.
        </p>
    </div>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger">
            @Model.ErrorMessage
        </div>
    }

    <!-- Stats -->
    <div class="stats-grid">
        <div class="stat-card">
            <div class="stat-value">@Model.TotalTrips</div>
            <div class="stat-label">Total Trips</div>
        </div>

        <div class="stat-card">
            <div class="stat-value">@Model.UpcomingTrips</div>
            <div class="stat-label">Upcoming Trips</div>
        </div>

        <div class="stat-card">
            <div class="stat-value">@Model.ActiveBookings</div>
            <div class="stat-label">Active Bookings</div>
        </div>

        <div class="stat-card">
            <div class="stat-value">@Model.TotalEarnings.ToString("0.00")</div>
            <div class="stat-label">Total Earnings (EGP)</div>
        </div>
    </div>

    <!-- Main content -->
    <div class="content-grid">

        <!-- Left: Trips -->
        <section class="trips-section">
            <div class="section-title">
                <span>Your Trips</span>
                <a asp-page="/Driver/Trips/Create" class="btn-small btn-edit">
                    + Create Trip
                </a>
            </div>

            @if (Model.Trips != null && Model.Trips.Any())
            {
                @foreach (var trip in Model.Trips.OrderByDescending(t => t.DepartureDate))
                {
                    var statusClass = "status-upcoming";
                    if (string.Equals(trip.Status, "Completed", StringComparison.OrdinalIgnoreCase))
                    {
                        statusClass = "status-completed";
                    }
                    else if (string.Equals(trip.Status, "Active", StringComparison.OrdinalIgnoreCase))
                    {
                        statusClass = "status-active";
                    }
                    else if (string.Equals(trip.Status, "Canceled", StringComparison.OrdinalIgnoreCase))
                    {
                        statusClass = "status-completed";
                    }

                    <div class="trip-card">
                        <div class="trip-header">
                            <div>
                                <div class="trip-route">
                                    @trip.FromLocation <span style="color: var(--gray-500);">→</span> @trip.ToLocation
                                </div>
                                <div style="font-size: 13px; color: var(--gray-500); margin-top: 4px;">
                                    Trip ID: #@trip.TripId
                                </div>
                            </div>

                            <div class="trip-status @statusClass">
                                @trip.Status
                            </div>
                        </div>

                        <div class="trip-details">
                            <div class="trip-detail">
                                <strong>Date:</strong>
                                @trip.DepartureDate.ToString("yyyy-MM-dd")
                            </div>
                            <div class="trip-detail">
                                <strong>Time:</strong>
                                @trip.DepartureTime
                            </div>
                            <div class="trip-detail">
                                <strong>Seats:</strong>
                                @trip.CurrentPassengers / @trip.MaxPassengers
                            </div>
                            <div class="trip-detail">
                                <strong>Price per seat:</strong>
                                @trip.Price.ToString("0.00") EGP
                            </div>
                        </div>

                        <div class="trip-actions">
                            <a asp-page="/Driver/Trips/Details"
                               asp-route-id="@trip.TripId"
                               class="btn-small btn-view">
                                View Details
                            </a>

                            <a asp-page="/Driver/Trips/Edit"
                               asp-route-id="@trip.TripId"
                               class="btn-small btn-edit">
                                Edit Trip
                            </a>

                            <a asp-page="/Driver/Trips/Bookings"
                               asp-route-id="@trip.TripId"
                               class="btn-small btn-view">
                                View Bookings
                            </a>
                        </div>
                    </div>
                }
            }
            else
            {
                <p style="color: var(--gray-600);">
                    You don’t have any trips yet.
                    <a asp-page="/Driver/Trips/Create">Create your first trip</a>.
                </p>
            }
        </section>

        <!-- Right: Quick actions + notifications -->
        <aside class="quick-actions">
            <div class="section-title" style="margin-bottom: 16px;">
                <span>Quick Actions</span>
            </div>

            <button type="button"
                    class="action-btn"
                    onclick="window.location.href='@Url.Page("/Driver/Trips/Create")'">
                + Create New Trip
            </button>

            <button type="button"
                    class="action-btn"
                    onclick="window.location.href='@Url.Page("/Driver/Vehicle/Edit")'">
                Manage Vehicle
            </button>

            <button type="button"
                    class="action-btn"
                    onclick="window.location.href='@Url.Page("/Driver/Payments/History")'">
                View Payment History
            </button>

            <div class="notifications-list">
                <div class="section-title" style="margin-bottom: 12px;">
                    <span style="font-size:16px;">Notifications</span>
                </div>

                @if (Model.Notifications != null && Model.Notifications.Any())
                {
                    @foreach (var n in Model.Notifications.OrderByDescending(n => n.CreatedAt))
                    {
                        <div class="notification-item">
                            <div style="margin-bottom: 4px;">
                                @n.Message
                            </div>
                            <div style="font-size: 12px; color: var(--gray-500);">
                                @n.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")
                                @if (!n.IsRead)
                                {
                                    <span style="margin-left: 8px; font-weight: 600; color: var(--primary);">
                                        • New
                                    </span>
                                }
                            </div>
                        </div>
                    }
                }
                else
                {
                    <p style="color: var(--gray-600); font-size: 14px;">
                        No notifications at the moment.
                    </p>
                }
            </div>
        </aside>

    </div>
</div>
