      height: 64px;
      border-radius: 12px;
      background: var(--gray-100);
      display: grid;
      place-items: center;
      font-size: 32px;
      flex-shrink: 0;
    }

    .payment-info {
      flex: 1;
    }

    .payment-type {
      font-size: 18px;
      font-weight: 700;
      margin-bottom: 4px;
      color: var(--gray-900);
    }

    .payment-details {
      font-size: 14px;
      color: var(--gray-600);
    }

    .payment-badge {
      padding: 4px 12px;
      border-radius: 6px;
      font-size: 12px;
      font-weight: 600;
      background: var(--primary-bg);
      color: var(--primary);
