    }

    .ride-item:last-child {
      border-bottom: none;
    }

    .ride-item:hover {
      background: var(--gray-50);
    }

    .ride-date {
      display: flex;
      flex-direction: column;
      align-items: center;
      padding: 12px;
      background: var(--primary-bg);
      border-radius: var(--radius);
